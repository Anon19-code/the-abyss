// --- backend/package.json ---
/*
{
  "name": "the-abyss-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node index.js"
  },
  "dependencies": {
    "bad-words": "^3.0.4",
    "body-parser": "^1.20.2",
